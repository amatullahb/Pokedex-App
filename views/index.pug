extends layout

block content
 #pokedex
  each pokemon in pokedex
   div(class=`card ${pokemon.type}`)
    .top
     h5.name #{pokemon.name}
     if pokemon.id > 100
      h5.id ##{pokemon.id}
     else if pokemon.id > 10 && pokemon.id < 100
      h5.id #0#{pokemon.id}
     else
      h5 #00#{pokemon.id}
    img(src=`${pokemon.img}` class="img")
               